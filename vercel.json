{
  "version": 2,
  "builds": [
    {
      "src": "/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(index|receiver)\\.html",
      "dest": "/public/$1.html"
    },
    {
      "src": "/(code|receiver)\\.js",
      "dest": "/public/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ]
}
